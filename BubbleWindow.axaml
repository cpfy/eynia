<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="eynia.BubbleWindow"
        Title="Bubble Window"
        Width="80"
        MaxWidth="80"
        Height="80"
        MaxHeight="80"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None">

     <Border Name="Border" Width="80" Height="80" CornerRadius="10">
        <Grid>
            <!-- 在XAML中，元素的堆叠顺序是由它们在代码中出现的顺序决定的：后添加的元素会显示在前添加的元素之上 -->
            <ProgressBar Name="ProgressBar" Minimum="0" Maximum="100" Value="100" Height="80" Width="80" MaxWidth="80" Foreground="LightBlue"/>
            <TextBlock Name="TimeTextBlock" Text="01:00" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>