<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="eynia.PasswordDialog"
        Width="300" Height="150" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Enter Password:" Margin="0,0,0,10"/>
        <TextBox Name="PasswordBox" PasswordChar="*" Width="200"/>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,10,0,0" Click="OnOkClick"/>
    </StackPanel>
</Window>